{
    "$schema" : "https://raw.githubusercontent.com/microsoft/vcpkg-tool/main/docs/vcpkg.schema.json",
    "name" : "sdklib",
    "homepage" : "https://github.com/meganz/sdk",
    "features" :
    {
        "use-openssl":
        {
            "description": "OpenSSL library",
            "dependencies": [ "openssl" ]
        },
        "use-mediainfo": {
            "description": "MediaInfo library",
            "dependencies": [ "libmediainfo" ]
        },
        "use-freeimage": {
            "description": "FreeImage library",
            "dependencies": [
                {
                    "name": "freeimage",
                    "version>=" : "3.18.0#27"
                },
                {
                    "name": "jasper",
                    "default-features": false
                },
                {
                    "name": "tiff",
                    "version>=": "4.7.0"
                }
            ]
        },
        "use-ffmpeg": {
            "description": "FFMpeg library",
            "dependencies": [
                {
                    "name": "ffmpeg",
                    "version>=": "5.1.2#10",
                    "default-features": false,
                    "features": ["avcodec", "avformat", "swresample", "swscale"]
                }
            ]
        },
        "use-libuv": {
            "description": "libuv library",
            "dependencies": [ "libuv" ]
        },
        "use-pdfium": {
            "description": "pdfium library",
            "dependencies": [ "pdfium" ]
        },
        "use-readline": {
            "description": "Readline library",
            "dependencies": [ "readline" ]
        },
        "sdk-tests": {
            "description": "gtests library for the integration and unit tests",
            "dependencies": [ "gtest" ]
        }
    },
    "dependencies": [
        {
            "name": "cryptopp",
            "version>=": "8.9.0"
        },
        {
            "name": "curl",
            "version>=": "8.6.0"
        },
        "icu",
        "libsodium",
        {
            "name": "sqlite3",
            "version>=": "3.46.0#1"
        }
    ],
    "builtin-baseline" : "d5ec528843d29e3a52d745a64b469f810b2cedbf",
    "overrides": [
        {
            "name" : "libuv",
            "version": "1.44.2"
        }
    ]
}
